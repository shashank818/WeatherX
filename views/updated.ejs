<%- include('partials/header.ejs') -%>

<% weatherDetails.forEach(function(items){ %>

  <div class="container-fluid px-1 px-sm-3 py-5 mx-auto">
      <div class="row d-flex justify-content-center">
          <div class="row card0">
              <div class="card1 col-lg-8 col-md-7">
                <h1 style="color: white">WeatherX</h1>
                  <div class="text-center2">
                    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
<lottie-player src="https://assets1.lottiefiles.com/private_files/lf30_kj3arjju.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
                  </div>
                  <div class="row px-3 mt-3 mb-3">
                      <h1 class="large-font mr-3"> <%= items.temperature %> &#176;C </h1>
                      <div class="d-flex flex-column mr-3">
                          <h2 class="mt-3 mb-0"><%= items.cityName %></h2>
                          <small style="margin-left:2.5px"><%= items.description %></small>
                      </div>
                      <div class="d-flex flex-column text-center">
                          <img src="<%= items.imgPath %>" alt="No Preview available" width="100px" height="100px">

                      </div>
                  </div>
              </div>
              <div class="card2 col-lg-4 col-md-5">
                  <div class="row px-3">
                    <form action="/" method="post">
                      <input  type="text" placeholder="Search by Location" name ="cityName" class="mb-5">
                      <button type="submit"  class="fa fa-search mb-5 mr-0 text-center">Search</button>
                      </form>
                  </div>
                  <div class="mr-5">


                      <div class="line my-5"></div>

                      <p>Weather Details</p>
                      <div class="row px-3">
                          <p class="light-text">Pressure</p>
                          <p class="ml-auto"><%= items.pressure %></p>
                      </div>
                      <div class="row px-3">
                          <p class="light-text">Humidity</p>
                          <p class="ml-auto"><%= items.humidity%></p>
                      </div>
                      <div class="row px-3">
                          <p class="light-text">Wind Speed</p>
                          <p class="ml-auto"><%= items.windSpeed%></p>
                      </div>
                      <div class="row px-3">
                          <p class="light-text">Wind Degree</p>
                          <p class="ml-auto"><%= items.windDeg%></p>
                      </div>

                      <div class="line mt-3"></div>
                  </div>
              </div>
          </div>
      </div>
  </div>













<% }); %>



  </body>

  <script src="index.js"></script>
</html>
